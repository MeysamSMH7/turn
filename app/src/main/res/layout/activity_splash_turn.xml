<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    tools:context=".Activity.Splash.Activity_Splash_Turn">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/main_background"
        android:tint="#EBFFFFFF" />

    <ImageView
        android:id="@+id/img123"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textasdf3"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_app_4" />

    <TextView
        android:id="@+id/textasdf3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="7dp"
        android:text=" سامانه نوبت دهی درمانگاه ها و کلینیک های تخصصی دانشگاه علوم پزشکی مازندران"
        android:textAlignment="center"
        android:textColor="@color/colorBlack"
        android:textSize="13dp"
        android:textStyle="bold"
        android:typeface="serif" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textasdf3"
        android:layout_alignParentStart="true"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:paddingLeft="35dp"
        android:paddingRight="35dp"
        android:text="جستجو و دریافت نوبت پزشکان،استعلام و لغو نوبت"
        android:textAlignment="center"
        android:textColor="@color/colorBlack"
        android:textSize="12dp"
        android:typeface="serif" />

    <ProgressBar
        android:id="@+id/progressAcS"
        style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:indeterminate="true" />

    <TextView
        android:id="@+id/txtAcS_Version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/progressAcS"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="7dp"
        android:textColor="@color/colorWhite" />

    <TextView
        android:id="@+id/txtAcS_tryAgain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtAcS_Version"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:text="tryAgain"
        android:textColor="@color/colorWhite"
        android:visibility="gone" />


</RelativeLayout>