<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    tools:context=".Activity.Splash.Activity_Splash_Turn">
    <ImageView
        android:src="@drawable/main_background"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:tint="#BAFFFFFF"
        android:layout_height="match_parent"/>


    <ImageView
        android:id="@+id/img123"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_above="@+id/textasdf3"
        android:layout_centerHorizontal="true"
        android:src="@drawable/solidarity" />

    <TextView
        android:id="@+id/textasdf3"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:text="سامانه نوبت دهی دانشگاه علوم پزشکی مازندران"
        android:textAlignment="center"
        android:textColor="#009688"
        android:textSize="25dp"
        android:textStyle="bold"
        android:typeface="serif" />
    <ProgressBar
        android:id="@+id/progressAcS"
        style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:indeterminate="true" />

    <TextView
        android:id="@+id/txtAcS_Version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/progressAcS"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="7dp"
        android:textColor="@color/colorWhite" />

    <TextView
        android:id="@+id/txtAcS_tryAgain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtAcS_Version"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:text="tryAgain"
        android:textColor="@color/colorWhite"
        android:visibility="gone" />


</RelativeLayout>