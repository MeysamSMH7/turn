<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearPrint"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_corner_white"
        android:orientation="vertical"
        android:padding="7dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="دانشگاه علوم پزشکی مازندارن"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtPrint_hospitalName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="مجتمع تخصصی و فوق تخصصی باعبان(طوبی)" />

            <TextView
                android:id="@+id/txtPrint_hospitalAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="آدرس: ساری - بلوار خزر" />

            <TextView
                android:id="@+id/txtPrint_hospitalTell"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="تفلن مرکز:-" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtPrint_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:gravity="right"
                    android:text="تاریخ نوبت: شنبه 23 فروردین 1399" />

                <TextView
                    android:id="@+id/txtPrint_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:gravity="right"
                    android:text="ساعت اخذ نوبت: 12:12" />

                <TextView
                    android:id="@+id/txtPrint_hours"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:gravity="right"
                    android:text="ساعت حضو بیمار: " />

                <TextView
                    android:id="@+id/txtPrint_shit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:gravity="right"
                    android:text="شیفت: عصر" />

                <TextView
                    android:id="@+id/txtPrint_doctor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:gravity="right"
                    android:text="پزشک: مهدی نیکخواه" />

                <TextView
                    android:id="@+id/txtPrint_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:gravity="right"
                    android:text="نوع خدمت: ویزیت متخصص استادیار" />

                <TextView
                    android:id="@+id/txtPrint_typeBime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:gravity="right"
                    android:text="نوع بیمه: تامین اجتماعی (عادی)" />

                <TextView
                    android:id="@+id/txtPrint_firstLastName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:gravity="right"
                    android:text="نام و نام خانوادگی بیمار: مهسا طاهری" />

                <TextView
                    android:id="@+id/txtPrint_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:gravity="right"
                    android:text="مبلغ قابل پرداخت: 48,000 ریال" />

                <TextView
                    android:id="@+id/txtPrint_pakhsh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:gravity="right"
                    android:text="نام پخش: درمانگاه4" />

                <TextView
                    android:id="@+id/txtPrint_codNobat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:gravity="right"
                    android:text="کد پیگیری نوبت: 43215" />

                <TextView
                    android:id="@+id/txtPrint_numberNobat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="right"
                    android:paddingRight="7dp"
                    android:text="شماره نوبت: 10"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:gravity="right"
                    android:text="کد پیگیری پرداخت:" />


                <ImageView
                    android:id="@+id/imgPrint_batcod"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@color/colorRed" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtPrint_ghabzNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="شماره قبض: 0" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="nobat.mazums.ac.ir" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="مهرپذیرش کلینیک:" />

                        <TextView
                            android:id="@+id/txtPrint_time2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="12:12" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:rotation="90"
                    android:text="*لطفا در تاریخ اخذ شده به پذیرش درمانگاه مراجعه فرمایید." />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>


