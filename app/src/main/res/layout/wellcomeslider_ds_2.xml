<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layoutDirection="ltr"
    android:layout_height="match_parent"
    android:background="#f64c73">

    <ImageView
        android:id="@+id/img123"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_above="@+id/textasdf3"
        android:layout_centerHorizontal="true"        android:background="@mipmap/ic_launcher_round"

        android:backgroundTint="@color/colorWhite" />

    <TextView
        android:id="@+id/textasdf3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:text="ثبت درخواست"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        android:typeface="serif" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textasdf3"
        android:layout_alignParentStart="true"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:paddingLeft="35dp"
        android:paddingRight="35dp"
        android:text="امکان دسترسی آسان به بخش درخواست ها به منظور پوشش نیازمندی های کاربران در تمامی سطوح"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:typeface="serif" />
</RelativeLayout>

