<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/main_background"
        android:tint="#EBFFFFFF" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linearBtns"
        android:paddingLeft="7dp"
        android:paddingRight="7dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="7dp">

            <!--    linearSelectFilters        -->
            <LinearLayout
                android:id="@+id/linearSelectFilters"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    app:cardCornerRadius="7dp">

                    <LinearLayout
                        android:id="@+id/linearFrRes_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:orientation="horizontal"
                        android:padding="7dp">

                        <ImageView
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:layout_marginLeft="35dp"
                            android:orientation="horizontal"
                            android:src="@drawable/ic_pic"
                            android:tint="#0DC3B2" />

                        <TextView
                            android:id="@+id/txtFrResTitle_city"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:gravity="right|center"
                            android:text="انتخاب شهر"
                            android:textColor="@color/colorLogo"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/txtFrRes_city"
                            android:layout_width="381dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="13dp"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="1"
                            android:gravity="right|center"
                            android:paddingLeft="7dp"
                            android:paddingRight="45dp"
                            android:text="\tتمام شهرها"
                            android:textColor="@color/colorLogo"
                            android:textStyle="bold" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:paddingTop="10dp"
                    app:cardCornerRadius="7dp">

                    <LinearLayout
                        android:id="@+id/linearFrRes_takhasos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:background="@drawable/bg_white_corner_"
                        android:orientation="horizontal"
                        android:padding="7dp">

                        <ImageView
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:layout_marginLeft="35dp"
                            android:orientation="horizontal"
                            android:src="@drawable/ic_lungs"
                            android:tint="#0DC3B2" />

                        <TextView
                            android:id="@+id/txtFrResTitle_takhasos"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:gravity="right|center"
                            android:text="انتخاب تخصص"
                            android:textColor="@color/colorLogo"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/txtFrRes_takhasos"
                            android:layout_width="381dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="13dp"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="1"
                            android:gravity="right|center"
                            android:paddingLeft="7dp"
                            android:paddingRight="45dp"
                            android:text="\tتمام تخصص ها"
                            android:textColor="@color/colorLogo"
                            android:textStyle="bold"

                            />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:paddingTop="10dp"
                    app:cardCornerRadius="7dp">

                    <LinearLayout
                        android:id="@+id/linearFrRes_darmonghah"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:background="@drawable/bg_white_corner_"
                        android:orientation="horizontal"
                        android:padding="7dp">

                        <ImageView
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:layout_marginLeft="35dp"
                            android:orientation="horizontal"
                            android:src="@drawable/hospital"
                            android:tint="#0DC3B2" />

                        <TextView
                            android:id="@+id/txtFrResTitle_darmonghah"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:gravity="right|center"
                            android:text="انتخاب درمانگاه ها"
                            android:textColor="@color/colorLogo"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/txtFrRes_darmonghah"
                            android:layout_width="381dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="13dp"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="1"
                            android:gravity="right|center"
                            android:paddingLeft="7dp"
                            android:paddingRight="45dp"
                            android:text="\tتمام درمانگاه ها"
                            android:textColor="@color/colorLogo"
                            android:textStyle="bold" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    app:cardCornerRadius="7dp">

                    <LinearLayout
                        android:id="@+id/linearFrRes_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:background="@drawable/bg_white_corner_"
                        android:orientation="horizontal"
                        android:padding="7dp">

                        <TextView
                            android:id="@+id/txtFrResTitle_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:gravity="right|center"
                            android:text="انتخاب بازه زمانی"
                            android:textColor="@color/colorLogo"
                            android:visibility="gone" />

                        <ImageView
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:layout_marginLeft="35dp"
                            android:orientation="horizontal"
                            android:src="@drawable/ic_calendar"
                            android:tint="#0DC3B2" />

                        <TextView
                            android:id="@+id/txtFrRes_time"
                            android:layout_width="381dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="13dp"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="1"
                            android:gravity="right|center"
                            android:paddingLeft="7dp"
                            android:paddingRight="45dp"
                            android:text="\tتمام زمان ها"
                            android:textColor="@color/colorLogo"
                            android:textStyle="bold" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    app:cardCornerRadius="7dp">

                    <LinearLayout
                        android:id="@+id/linearFrRes_doctor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:background="@drawable/bg_white_corner_"
                        android:orientation="horizontal"
                        android:padding="7dp">

                        <TextView
                            android:id="@+id/txtFrResTitle_doctor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:gravity="right|center"
                            android:text="انتخاب پزشک"
                            android:textColor="@color/colorLogo"
                            android:visibility="gone" />

                        <ImageView
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:layout_marginLeft="35dp"
                            android:orientation="horizontal"
                            android:src="@drawable/doctor"
                            android:tint="#0DC3B2" />

                        <TextView
                            android:id="@+id/txtFrRes_doctor"
                            android:layout_width="381dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="13dp"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="1"
                            android:gravity="right|center"
                            android:paddingLeft="7dp"
                            android:paddingRight="45dp"
                            android:text="\tتمام پزشک ها"
                            android:textColor="@color/colorLogo"
                            android:textStyle="bold" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <!--    linearResTimes             -->
            <LinearLayout
                android:id="@+id/linearResTimes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcycRT"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            </LinearLayout>

            <!--    linearPazireshPage         -->
            <LinearLayout
                android:id="@+id/linearPazireshPage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="visible">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:background="@drawable/bg_white_corner_"
                            android:orientation="vertical"
                            android:padding="7dp">

                            <EditText
                                android:id="@+id/edtFrPP_Cod"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/colorPrimaryDark"
                                android:gravity="right"
                                android:hint="کد ملی"
                                android:maxLines="2"
                                android:paddingEnd="7dp"
                                android:paddingRight="7dp"
                                android:textColor="@color/colorBlack"
                                android:textCursorDrawable="@color/colorPrimaryDark"
                                android:textSize="15sp" />

                            <RadioGroup
                                android:id="@+id/radioGPPP_CodMeli"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <RadioButton
                                    android:id="@+id/radioBtnPP_CodMeli"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"
                                    android:checked="true"
                                    android:gravity="right|center"
                                    android:layoutDirection="rtl"
                                    android:text="کد ملی" />

                                <RadioButton
                                    android:id="@+id/radioBtnPP_NumErja"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"
                                    android:gravity="right|center"
                                    android:layoutDirection="rtl"
                                    android:text="شماره ارجا" />

                            </RadioGroup>

                            <Button
                                android:id="@+id/btnPP_search"
                                style="@style/loginButton"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="20dp"
                                android:layout_weight="0.5"
                                android:backgroundTint="@color/colorPrimaryDark"
                                android:paddingRight="20dp"
                                android:text="جستجو" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/ic_doctor" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/txtPP_markazName"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="3dp"
                                    android:gravity="right|center"
                                    android:text="@string/markazName"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/txtPP_doctorName"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="3dp"
                                    android:gravity="right|center"
                                    android:text="@string/doctorName" />

                                <TextView
                                    android:id="@+id/txtPP_motakhasesName"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="3dp"
                                    android:gravity="right|center"
                                    android:text="@string/motakhasesName" />

                                <TextView
                                    android:id="@+id/txtPP_datePP"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="3dp"
                                    android:gravity="right|center"
                                    android:text="@string/datePP" />


                            </LinearLayout>


                        </LinearLayout>

                        <!--    linearPazireshPage2         -->

                        <LinearLayout
                            android:id="@+id/linearPazireshPage2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">


                            <Button
                                android:id="@+id/btnPP_paziresh"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="پذیرش" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="3dp"
                                android:background="@drawable/bg_white_corner_"
                                android:orientation="vertical"
                                android:padding="7dp">

                                <EditText
                                    android:id="@+id/edtFrPP_family"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:backgroundTint="@color/colorPurple7"
                                    android:gravity="right"
                                    android:maxLines="2"
                                    android:paddingEnd="7dp"
                                    android:paddingRight="7dp"
                                    android:textColor="@color/colorPurple7"
                                    android:textCursorDrawable="@color/colorPurple7"
                                    android:textSize="15sp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="0.5"
                                    android:gravity="right|center"
                                    android:text="نام خانوادگی"
                                    android:textColor="@color/colorLogo" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="3dp"
                                android:background="@drawable/bg_white_corner_"
                                android:orientation="vertical"
                                android:padding="7dp">

                                <EditText
                                    android:id="@+id/edtFrPP_fatherName"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:backgroundTint="@color/colorPurple7"
                                    android:gravity="right"
                                    android:maxLines="2"
                                    android:paddingEnd="7dp"
                                    android:paddingRight="7dp"
                                    android:textColor="@color/colorPurple7"
                                    android:textCursorDrawable="@color/colorPurple7"
                                    android:textSize="15sp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="0.5"
                                    android:gravity="right|center"
                                    android:text="نام پدر"
                                    android:textColor="@color/colorLogo" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="3dp"
                                android:background="@drawable/bg_white_corner_"
                                android:orientation="vertical"
                                android:padding="7dp">

                                <RadioGroup
                                    android:id="@+id/radioGPPP_sex"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <RadioButton
                                        android:id="@+id/radioBtnPP_female"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="right"
                                        android:layout_weight="0.5"
                                        android:gravity="right|center"
                                        android:layoutDirection="rtl"
                                        android:text="زن" />

                                    <RadioButton
                                        android:id="@+id/radioBtnPP_male"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="right"
                                        android:layout_weight="0.5"
                                        android:gravity="right|center"
                                        android:layoutDirection="rtl"
                                        android:text="مرد" />

                                </RadioGroup>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="0.5"
                                    android:gravity="right|center"
                                    android:text="جنسیت"
                                    android:textColor="@color/colorLogo" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="3dp"
                                android:background="@drawable/bg_white_corner_"
                                android:orientation="vertical"
                                android:padding="7dp">

                                <EditText
                                    android:id="@+id/edtFrPP_phone"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:backgroundTint="@color/colorPurple7"
                                    android:gravity="right"
                                    android:inputType="number"
                                    android:maxLines="2"
                                    android:paddingEnd="7dp"
                                    android:paddingRight="7dp"
                                    android:textColor="@color/colorPurple7"
                                    android:textCursorDrawable="@color/colorPurple7"
                                    android:textSize="15sp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="0.5"
                                    android:gravity="right|center"
                                    android:text="شماره همراه"
                                    android:textColor="@color/colorLogo" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/linearFrPP_City"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="3dp"
                                android:background="@drawable/bg_white_corner_"
                                android:orientation="vertical"
                                android:padding="7dp">

                                <TextView
                                    android:id="@+id/edtFrPP_city"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.5"
                                    android:gravity="right|center"
                                    android:text="انتخاب شهر"
                                    android:textColor="@color/colorLogo" />

                                <TextView
                                    android:id="@+id/txtFrPP_city"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="7dp"
                                    android:layout_marginBottom="7dp"
                                    android:layout_weight="0.5"
                                    android:gravity="right|center"
                                    android:paddingLeft="7dp"
                                    android:textColor="@color/colorLogo" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="3dp"
                                android:background="@drawable/bg_white_corner_"
                                android:orientation="vertical"
                                android:padding="7dp">

                                <EditText
                                    android:id="@+id/edtFrPP_address"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:backgroundTint="@color/colorPurple7"
                                    android:gravity="right"
                                    android:maxLines="2"
                                    android:paddingEnd="7dp"
                                    android:paddingRight="7dp"
                                    android:textColor="@color/colorPurple7"
                                    android:textCursorDrawable="@color/colorPurple7"
                                    android:textSize="15sp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="0.5"
                                    android:gravity="right|center"
                                    android:text="آدرس"
                                    android:textColor="@color/colorLogo" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/linearFrPP_bime"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="3dp"
                                android:background="@drawable/bg_white_corner_"
                                android:orientation="vertical"
                                android:padding="7dp">

                                <TextView
                                    android:id="@+id/edtFrPP_bime"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.5"
                                    android:gravity="right|center"
                                    android:text="انتخاب بیمه"
                                    android:textColor="@color/colorLogo" />

                                <TextView
                                    android:id="@+id/txtFrPP_bime"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="7dp"
                                    android:layout_marginBottom="7dp"
                                    android:layout_weight="0.5"
                                    android:gravity="right|center"
                                    android:paddingLeft="7dp"
                                    android:textColor="@color/colorLogo" />

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="3dp"
                                android:background="@drawable/bg_white_corner_"
                                android:orientation="vertical"
                                android:padding="7dp">

                                <EditText
                                    android:id="@+id/edtFrPP_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:backgroundTint="@color/colorPurple7"
                                    android:enabled="false"
                                    android:gravity="right"
                                    android:maxLines="2"
                                    android:paddingEnd="7dp"
                                    android:paddingRight="7dp"
                                    android:textColor="@color/colorPurple7"
                                    android:textCursorDrawable="@color/colorPurple7"
                                    android:textSize="15sp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="0.5"
                                    android:gravity="right|center"
                                    android:text="نام بیمار"
                                    android:textColor="@color/colorLogo" />

                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>


                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!--  Buttons  -->
    <LinearLayout
        android:id="@+id/linearBtns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <!--    linearSelectFiltersBtn        -->
        <LinearLayout
            android:id="@+id/linearSelectFiltersBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnFrRes_next"
                style="@style/loginButton"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:backgroundTint="@color/colorPrimaryDark"
                android:text="جستجو" />

            <Button
                android:layout_marginLeft="3dp"
                android:layout_marginRight="7dp"
                android:id="@+id/btnFrRes_filter"
                style="@style/loginButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
