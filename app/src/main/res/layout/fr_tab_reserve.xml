<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="7dp"
    android:paddingRight="7dp">


    <LinearLayout
        android:id="@+id/linearSelectFilters"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearFrRes_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/bg_white_corner_"
            android:orientation="vertical"
            android:padding="7dp">

            <TextView
                android:id="@+id/txtFrResTitle_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="right|center"
                android:text="انتخاب شهر"
                android:textColor="@color/colorLogo" />

            <TextView
                android:id="@+id/txtFrRes_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:layout_weight="0.5"
                android:gravity="right|center"
                android:paddingLeft="7dp"
                android:text="\tتمام شهرها"
                android:textColor="@color/colorLogo" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearFrRes_takhasos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/bg_white_corner_"
            android:orientation="vertical"
            android:padding="7dp">

            <TextView
                android:id="@+id/txtFrResTitle_takhasos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="right|center"
                android:text="انتخاب تخصص"
                android:textColor="@color/colorLogo" />

            <TextView
                android:id="@+id/txtFrRes_takhasos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:layout_weight="0.5"
                android:gravity="right|center"
                android:paddingLeft="7dp"
                android:text="\tتمام تخصص ها"
                android:textColor="@color/colorLogo" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearFrRes_darmonghah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/bg_white_corner_"
            android:orientation="vertical"
            android:padding="7dp">

            <TextView
                android:id="@+id/txtFrResTitle_darmonghah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="right|center"
                android:text="انتخاب درمانگاه ها"
                android:textColor="@color/colorLogo" />

            <TextView
                android:id="@+id/txtFrRes_darmonghah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:layout_weight="0.5"
                android:gravity="right|center"
                android:paddingLeft="7dp"
                android:text="\tتمام درمانگاه ها"
                android:textColor="@color/colorLogo" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearFrRes_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/bg_white_corner_"
            android:orientation="vertical"
            android:padding="7dp">

            <TextView
                android:id="@+id/txtFrResTitle_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="right|center"
                android:text="انتخاب بازه زمانی"
                android:textColor="@color/colorLogo" />

            <TextView
                android:id="@+id/txtFrRes_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:layout_weight="0.5"
                android:gravity="right|center"
                android:paddingLeft="7dp"
                android:text="\tتمام زمان ها"
                android:textColor="@color/colorLogo" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearFrRes_doctor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/bg_white_corner_"
            android:orientation="vertical"
            android:padding="7dp">

            <TextView
                android:id="@+id/txtFrResTitle_doctor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="right|center"
                android:text="انتخاب پزشک"
                android:textColor="@color/colorLogo" />

            <TextView
                android:id="@+id/txtFrRes_doctor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:layout_weight="0.5"
                android:gravity="right|center"
                android:paddingLeft="7dp"
                android:text="\tتمام پزشک ها"
                android:textColor="@color/colorLogo" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>