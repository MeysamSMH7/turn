<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layoutDirection="ltr"
    android:layout_height="match_parent">

    <ImageView
        android:src="@drawable/main_background"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:tint="#E8FFFFFF"
        android:layout_height="match_parent" />
    <ImageView
        android:id="@+id/img123"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textasdf3"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_app_1" />

    <TextView
        android:id="@+id/textasdf3"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:text="ما همیشه با شما هستیم"
        android:textAlignment="center"
        android:textColor="@color/colorBlack"
        android:textSize="25dp"
        android:textStyle="bold"
        android:typeface="serif" />

    <TextView
        android:layout_width="461dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textasdf3"
        android:layout_alignParentStart="true"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:paddingLeft="35dp"
        android:paddingRight="35dp"
        android:text="در هر مکانی در سریعترین زمان پزشک و درمانگاه خود را انتخاب کنید"
        android:textAlignment="center"
        android:textColor="@color/colorBlack"
        android:textSize="11dp"
        android:typeface="serif" />
</RelativeLayout>